<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/car_view"
    tools:context=".InfoFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>
    <TextView
        style="@style/TextViewStyleCap"
        android:text="СТОИМОСТЬ"/>

    <TextView
        android:id="@+id/textViewInfoPrice"
        style="@style/TextViewStyle"
        android:background="@drawable/textview_info"
        android:text="Здесь будет информация о стоимости услуг"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/backBtnPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_marginTop="550dp"
        android:background="@drawable/btn_line"
        android:padding="10dp"
        android:text="ВЕРНУТЬСЯ НА ГЛАВНУЮ" />

</FrameLayout>