<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FRFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Для оформления записи заполните форму:"
            android:background="@color/white"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="Выберите марку ТС: "
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:layout_gravity="center"/>

        <Spinner android:id="@+id/spAutoMarka"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@color/white"/>

        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="Выберите модель ТС: "
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:layout_gravity="center"/>

        <Spinner android:id="@+id/spAutoModel"
            android:layout_width="350dp"
            android:layout_gravity="center"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@color/white"/>

        <EditText
            android:hint="Выберете дату и время"
            android:id="@+id/date_time_input"
            android:inputType="none"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/mTv_status"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:hint="Результат записи"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_gravity="center"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/mBtn_record"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:text="Записаться"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_line"
            android:layout_gravity="center"/>
    </LinearLayout>

</FrameLayout>